<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/padding_standard"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 🔍 Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_shadow"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_standard"
            android:paddingEnd="@dimen/padding_standard">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@android:drawable/ic_menu_search"
                    android:contentDescription="@string/search_icon"
                    app:tint="@color/colorPrimary" />
            </FrameLayout>

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="@string/search_hint"
                android:background="@android:color/transparent"
                android:paddingStart="@dimen/padding_standard"
                android:paddingEnd="@dimen/padding_standard"
                android:textColor="@color/onBackground"
                android:textColorHint="@color/colorSecondary"
                android:inputType="text"
                android:autofillHints="username" />
        </LinearLayout>

        <!-- Gợi ý -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suggestionList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <!-- 🔘 Chip recent -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_standard">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupRecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:singleLine="true"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="recent" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="colluding" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="entirely" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This" />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!-- 📌 Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/section_resources"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_title"
            android:textColor="@color/onBackground" />

        <!-- 🧱 Grid tài nguyên -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gridResources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:layout_marginTop="@dimen/margin_standard"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

